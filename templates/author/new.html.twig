{% extends 'base.html.twig' %}

{% block title %}Add a new author{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Add a new author</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="form-group row mb-3">
            {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row mb-3">
            {{ form_label(form.nb_books, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nb_books, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Author</button>
        {{ form_end(form) }}
    </div>
{% endblock %}